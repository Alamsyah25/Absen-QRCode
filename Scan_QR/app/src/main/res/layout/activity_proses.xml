<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_proses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alamsyah.scan_qr.Proses">

        <!--satu-->
        <LinearLayout
            android:id="@+id/satu"
            android:background="@drawable/bg_header"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="75dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_ditrupto"
                android:layout_width="match_parent"
                android:layout_height="70dip" />
            <!--<TextView-->
            <!--android:id="@+id/tvNamaTest"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAlignment="center"-->
            <!--android:textColor="@color/white"-->
            <!--android:text=""-->
            <!--android:textSize="25dip" />-->
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/satu"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_height="wrap_content"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout

                    android:background="#fff"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip">

                    <RelativeLayout
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1" >
                            <TextView
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:text="Data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:background="@color/color_black"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_below="@+id/line"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/gmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/gmail"
                                android:layout_width="50dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:id="@+id/email"
                                android:fontFamily="monospace"
                                android:textSize=".1in"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:text="Email"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/gmail"
                            android:id="@+id/lorem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/company"
                                android:layout_width="50dp"
                                android:layout_height="40dp" />

                            <TextView
                                android:fontFamily="monospace"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:layout_marginLeft="20dp"
                                android:text="Company"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:id="@+id/company" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/phone"
                            android:layout_below="@+id/lorem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/calendar"
                                android:layout_width="50dp"
                                android:layout_height="40dp" />
                            <TextView
                                android:id="@+id/tgl_hadir"
                                android:fontFamily="monospace"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:layout_marginLeft="22dp"
                                android:text="Date"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <!--dua-->
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_below="@+id/satu"
            android:id="@+id/dua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        </LinearLayout>
        <!--<Button-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:textColorHint="@color/white"-->
        <!--android:hint="Daftar Sekarang"-->
        <!--android:layout_margin="2dp"-->
        <!--android:textSize="15sp"-->
        <!--android:background="@drawable/btn_round"-->
        <!--android:layout_width="285dp"-->
        <!--android:layout_height="40dp" />-->
        <android.support.v7.widget.CardView
            android:layout_alignParentBottom="true"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:id="@id/done"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@color/transparent"
            android:layout_marginRight="20dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="5dip"
                android:paddingRight="5dip">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/qr"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:text="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


