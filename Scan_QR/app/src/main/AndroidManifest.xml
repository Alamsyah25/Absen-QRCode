<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alamsyah.scan_qr">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/qr"
        android:label="Scan QR Code"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/SplashScreen">
        <activity
            android:name=".SplashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".List"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Intro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Result"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".NoData" />
        <activity android:name=".Chose" />
        <activity android:name=".Booth" />
        <activity android:name=".Proses" />
        <activity android:name=".Shimmer"></activity>
    </application>

</manifest>